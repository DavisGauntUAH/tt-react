import { createSlice } from '@reduxjs/toolkit'

const initialState = {tList: []}

export const tasksSlice = createSlice({
    name: 'counter',
    initialState: {
        tList: [{
            id:0,
            task:'',
            dayTime:'',
            reminder: false
        }]
    },
    reducers: {
        addTask: (state, action) => {
            state.tList = [...state.tList, action.payload]
        },
        removeTask: (state, action) => {

        },
        updateReminder: (state, action) =>{
            state.tList[action.payload].reminder = !state.tList[action.payload].reminder
        },
        onStart: (state, action) => {

        }
    }
})